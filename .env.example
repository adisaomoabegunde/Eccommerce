# Environment Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env file to version control!

# Application Environment
ASPNETCORE_ENVIRONMENT=Development
BUILD_CONFIGURATION=Release

# API Port Configuration (for Docker Compose)
API_HTTP_PORT=5000
API_HTTPS_PORT=5001

# Database Configuration
SA_PASSWORD=YourStrong@Passw0rd
DB_SERVER=localhost
DB_PORT=1433
DB_NAME=EccommerceDb
DB_USER=sa

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_SECRET_KEY_AT_LEAST_64_CHARACTERS_LONG
JWT_ISSUER=EccommerceApi
JWT_AUDIENCE=EccommerceClient
JWT_EXPIRY_MINUTES=60

# Docker Registry (for CI/CD)
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=eccommerce-api

# API URLs
API_URL=http://localhost:5000
API_HTTPS_URL=https://localhost:5001

# Logging
LOG_LEVEL=Information

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_HTTPS_REDIRECT=false

# Azure/Cloud Configuration (if deploying to cloud)
# AZURE_SUBSCRIPTION_ID=
# AZURE_RESOURCE_GROUP=
# AZURE_LOCATION=eastus
# AZURE_CONTAINER_REGISTRY=
# AZURE_SQL_SERVER=
# AZURE_SQL_DATABASE=

# Kubernetes Configuration (if using K8s)
# K8S_NAMESPACE=default
# K8S_CLUSTER_NAME=
